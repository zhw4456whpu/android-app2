<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/skip_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/skip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:gravity="left"
        android:layout_marginLeft="35dp"
        android:text="@string/skip_0_title"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/skip_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip_0_desc"
        android:layout_below="@id/skip_title"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10sp"
        android:textColor="@android:color/white"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/alpha_10_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15sp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:background="none"
            android:layout_gravity="left"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="none"
            android:layout_gravity="right"
            android:text=">"
            android:textSize="20dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>
